<Window x:Class="LoveMeDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoveMeDo"
        mc:Ignorable="d"
        Title="LoveMeDo" Height="600" Width="800" Background="White" ResizeMode="NoResize">
    <Grid>
        <TabControl Margin="10">
            <TabItem x:Name="tabLab1" Header="Лабораторная работа №1">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Some text for lab1" HorizontalAlignment="Left" Margin="80,36,0,0" VerticalAlignment="Top" Height="42" Width="116"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabLab2" Header="Лабораторная работа №2">
                <Grid Background="#FFE5E5E5">
                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="166" Margin="10,10,0,0" VerticalAlignment="Top" Width="226">
                        <Label x:Name="labelLab2CStatus" Content="Status: Not connected" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                    </Border>
                    <Label Content="IP Address" HorizontalAlignment="Left" Margin="30,26,0,0" VerticalAlignment="Top" Width="120" FontSize="16"/>
                    <TextBox x:Name="boxModbusIP" HorizontalAlignment="Left" Height="30" Margin="30,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AutomationProperties.HelpText="Enter IP here" FontSize="16"/>
                    <Button x:Name="buttonModbusStart" Click="OnButtonConnectClicked" Content="Connect" HorizontalAlignment="Left" Margin="30,97,0,0" VerticalAlignment="Top" Width="178" Height="25" FontSize="16"/>
                    <TextBox x:Name="boxModbusPort" HorizontalAlignment="Left" Height="30" Margin="155,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="53" FontSize="16" Text="502"/>
                    <Label Content="Port" HorizontalAlignment="Left" Margin="155,26,0,0" VerticalAlignment="Top" Width="53" FontSize="16"/>
                    <TextBox x:Name="boxRegOffset" HorizontalAlignment="Left" Height="26" Margin="470,62,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="122" FontSize="16"/>
                    <Label Content="Register address" HorizontalAlignment="Left" Margin="295,58,0,0" VerticalAlignment="Top" Width="134" FontSize="16" Height="32"/>
                    <Label Content="Operation" HorizontalAlignment="Left" Margin="295,22,0,0" VerticalAlignment="Top" FontSize="16" Width="134"/>
                    <TextBox x:Name="boxConsoleOutput" HorizontalAlignment="Left" Height="332" Margin="10,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="748" FontSize="16" FontFamily="Courier New" IsReadOnly="True"/>
                    <ComboBox x:Name="boxModbusOp" HorizontalAlignment="Left" Margin="434,31,0,0" VerticalAlignment="Top" Width="158" IsReadOnly="True" ItemsSource="{DynamicResource comboModbusFn}" SelectedIndex="0"/>
                    <Label Content="# of registers" HorizontalAlignment="Left" Margin="295,95,0,0" VerticalAlignment="Top" FontSize="16" Width="134"/>
                    <TextBox x:Name="boxRegNumber" HorizontalAlignment="Left" Height="26" Margin="470,98,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="122" FontSize="16"/>
                    <Button x:Name="buttonModbusExecute" Click="OnExecuteButtonClicked" Content="Execute" HorizontalAlignment="Left" Margin="295,147,0,0" VerticalAlignment="Top" Width="297" Height="25" FontSize="16"/>
                    <Label Content="Value" HorizontalAlignment="Left" Margin="647,60,0,0" VerticalAlignment="Top" Width="71" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="16" Height="30"/>
                    <TextBox x:Name="boxModbusWriteValue" HorizontalAlignment="Left" Height="24" Margin="638,98,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="93" FontSize="16"/>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
